        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transliter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftGrid_TextBox" MinWidth="200" Width="326*"/>
            <ColumnDefinition Width="166*" MaxWidth="165" MinWidth="160"/>
            <ColumnDefinition x:Name="RightGrid_DataGrid" Width="301*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="ctxt_TextCode" Margin="10,15,17.4,9.655" 
                 TextWrapping="Wrap" Text="TextBox" />
        <Button x:Name="b_Run" Content="Button" Grid.Column="1" Margin="10.6,10,10.345,0" VerticalAlignment="Top" Height="19"/>
        <DataGrid Grid.Column="2" Height="100" Margin="9.655,10,10.309,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
